@model YLCShopping.Models.MemberLoginViewModel
@{
    Layout = null;
}


<!DOCTYPE HTML>
<head>
    <title>【bowl buying】shop</title>
    @Styles.Render("~/Content/css")
    @*@Styles.Render("~/Content/YLC_CSS_JS/css")*@
    @Scripts.Render("~/bundles/modernizr")
    <meta http-equiv="content-type" content="text/html; charset=UTF-8">
    <script type="text/javascript" src="https://cdn.bootcss.com/canvas-nest.js/1.0.1/canvas-nest.min.js"></script>
</head>

<style>
    * {
        margin: 0px;
        padding: 0px;
    }
    .title-nav {
        width: 100%;
        height: 70px;
        background: white;
        line-height: 70px;
        padding-left: 35px;
        color: #656565;
    }
    .title-img,title-text{
        float:left;
    }
    .title-img{
        margin-top:17.5px;
        margin-right:35px;
    }
    /*登录界面的背景图片*/
    .main-content {
        height: 750px;
        background-image: url('../../Content/Images/bk.jpeg');
    }

  .Users-login {
    background-color: white;
    height: 475px;
    width: 400px;
    position: absolute;
    top: -100px;
    left: 700px;
    right: 0px;
    bottom: 0px;
    margin: auto;
    border-radius: 10px;
    border: 2px black solid;
  }

    .big-title {
        text-align: center;
        color: #323232;
        padding-top: 66px;
        font-size: 30px;
        font-weight:bold;
    }

    .text-area {
        margin: 15px;
        padding-top: 10px;
        width: 340px;
        margin: auto;
    }



    .form-group {
        width: 340px;
        background: white;
        border-radius: 3px;
        border: 1px solid #DADADA;
    }

    .form-control {
        width: 297px;
        height: 50px;
        max-width: none;
        border: none;
    }

    #login-icon-1, #user-login {
        float: left;
        margin-left: 17px;
    }

    #login-icon-2, #lock-login {
        float: left;
        margin-left: 17px;
    }

    #login-icon-1, #login-icon-2 {
        text-align: center;
        margin-top: 15px;
    }

    .btn-login {
        width: 340px;
        height: 50px;
        max-width: none;
        margin: auto;
        font-size: 20px;
        background: #e66d5a;
        border: none;
        color: white;
    }

        .btn-login:hover {
            background: #F8A598;
            color: white;
        }

    .notice-login, .register-login {
        float: left;
    }

    .notice-login {
        float: left;
        color: #E66D5A;
        font-size: 16px;
    }

        .notice-login ul li {
            list-style: none;
        }

    .register-login {
        width: 340px;
        height: 50px;
        max-width: none;
        margin: auto;
        background: white;
        border: none;
        color: white;
        border-radius: 3px;
        margin-top:15px;
    }

    #aaa {
        display: block;
        width: 340px;
        height: 50px;
        text-align: center;
        color: #e66d5a;
        font-size: 20px;
        line-height: 50px;
        border: 1px solid #e66d5a;
        border-radius:3px;
    }
        #aaa:hover {
            background: #e66d5a;
            color:white;
            text-decoration:none;
        }
    .footer-content{
        height:80px;
        line-height:30px;
        padding-top:30px;
        text-align:center;
    }
</style>

<body>
    @using (Html.BeginForm())
    {

        <a class="btn btn-secondary" href="/Admin/Login" style="float:right;">
            Login management terminal
        </a>
        <div class="title-nav">
            <img width="35" height="35" src="~/Content/Images/Logo.png" class="title-img" />
            <p class="title-text" style="font-size:35px">【bowl buying】shop</p>
        </div><hr />
        <div class="main-content">
            <div class="Users-login">
                <div class="big-title"><p>member login</p></div>
                <div class="text-area">
                    <form>
                        <div class="form-group">
                            @*<label for="formGroupExampleInput">账&nbsp;号</label>*@
                            <img width="23" height="23" id="login-icon-1" src="~/Content/Images/user-暗紫色.png" />
                            @Html.TextBoxFor(model => model.email, new { data_val_email = "Email address please", @class = "form-control ", id = "user-text", placeholder = "amount please" })
                            @Html.ValidationMessageFor(model => model.email)
                        </div>
                        <div class="form-group">
                            @*<label for="formGroupExampleInput2">密&nbsp;码</label>*@
                            <img width="23" height="23" id="login-icon-2" src="~/Content/Images/lock-暗紫色.png" />
                            @Html.TextBoxFor(model => model.password, new { data_val_email = "", @class = "form-control", id = "lock-text", placeholder = "password please", type = "password" })
                            @Html.ValidationMessageFor(model => model.password)
                        </div>
                        <div style="width:480px;height:50px;">
                            <div class="notice-login">
                                @Html.ValidationSummary(true)
                            </div>
                        </div>


                        <input type="submit" value="login" class="btn btn-login" /><br />
                        <div class="register-login">
                            @Html.ActionLink("register", "Register", "Member", new { id = "aaa" })
                        </div>

                    </form>
                </div>
            </div>

        </div>
        <div class="footer-content">
            <span>If you forget the password, please email your account to xxxxxx@163.com and contact the administrator to reset the password</span>
            <br />
            <span>Copyright ©2022 【bowl buying】shop.</span>
            

        </div>



    }
</body>

